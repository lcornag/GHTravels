<section id="seccionFormCrear">
    <div class="wrapper">
        <div class="container">
            <div class="d-flex align-items-center justify-content-center" id="divFormCrear">
                <form method='post' action="/admin/guardar-usuario">
                    <div>
                        <h3>CREAR USUARIO</h3>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control form-control-sm" name="username" placeholder="username" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control form-control-sm" name="email" placeholder="email" required>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control form-control-sm" placeholder="password" name="password">
                            </div>
                            <div class="col">
                                <input type="text" class="form-control form-control-sm" placeholder="hash" required
                                       name="hash">
                            </div>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="active">
                                <label class="form-check-label" for="gridCheck">
                                    Activo
                                </label>
                            </div>
                        </div>

                    </div>
                    <div class="d-flex justify-content-end form-group">
                        <button type="submit" class="btn btn-primary btn-sm">Crear</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
