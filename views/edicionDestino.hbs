<section id="seccionFormEditar">
    <div class="wrapper">
        <div class="container">
            <div class="d-flex justify-content-center align-items-center">
                {{#if result}}
                    <form method='post' action="/admin/editar-destino" enctype="multipart/form-data">
                        <div>
                            <h3>EDITAR DESTINO</h3>
                        </div>
                        <div>
                            <input type="hidden" name="id" value="{{result.id}}">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control form-control-sm" name="travel"
                                   value="{{result.city}}">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control form-control-sm" name="description"
                                   value="{{result.description}}">
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col">
                                    <input type="text" class="form-control form-control-sm" value="{{result.type}}"
                                           name="type">
                                </div>
                                <div class="col">
                                    <input type="number" class="form-control form-control-sm" value="{{result.price}}"
                                           name="price">
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col">
                                <div class="form-group">
                                    <input type="file" name="file" class="form-control form-control">
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="active"
                                        {{#if result.active}}
                                           checked
                                        {{/if}}>
                                    <label class="form-check-label" for="gridCheck">
                                        Activo
                                    </label>
                                    <button type="submit" class="btn btn-primary btn-sm" style="float: right;">Editar</button>
                                </div>
                            </div>
                    </form>
                {{/if}}
            </div>
        </div>
    </div>
</section>
