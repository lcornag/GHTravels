<body>
<section id="navigationbar">
    <nav class="navbar" id="fullNav">
        <a class="navbar-brand col" href="/">
            <div class="row">
                <div class="col" id="logoImagen"></div>
                <div class="col" id="logoTexto">GeeksHubs Travels</div>
            </div>
        </a>
        <div class="nav-item col-6 text-center" id="navbarList">
            <div class="row" id="anchorLinks">
                <div class="col">
                    <div class="anchorwrapper">
                        <a class="nav-link" href="#destinos" id="anchor1">Destinos</a>
                    </div>
