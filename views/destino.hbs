<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>GeeksHubs Travels</title>
    <link rel="stylesheet" href="../bower_components/bootstrap/dist/css/bootstrap.min.css" />
    <link rel='stylesheet' href='/stylesheets/mainStyle.css' />
    <link rel='stylesheet' href='/stylesheets/destino.css' />
</head>
<body>
    <section id="navigationbar">
        {{> navbar}}
    </section>
    <section id="inicio" class="parallax--bg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-11" id="nombreDestino">
                        <p> {{id}} </p>
                </div>
                <div class="col-1"></div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col" id="colCarousel">
                    <div id="destinoCarousel" class="carousel slide" data-ride="carousel">
                        <!--Indicadores-->
                        <ul class="carousel-indicators">
                            <li data-target="#destinoCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#destinoCarousel" data-slide-to="1" ></li>
                            <li data-target="#destinoCarousel" data-slide-to="2" ></li>
                        </ul>
                        <!--slideshow-->
                        <div class="carousel-inner">
                            <div class="carousel-item active" id="destinoBG" style="background-image: url('/images/destinos/{{id}}1.jpg')">
                            </div>
                            <div class="carousel-item" id="destinoBG" style="background-image: url('/images/destinos/{{id}}2.jpg')">
                            </div>
                            <div class="carousel-item" id="destinoBG" style="background-image: url('/images/destinos/{{id}}3.jpg')">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div id="descripcionSitio">
                        <p>sample text sample text sample text sample text sample text sample text
                            sample text sample text sample text sample text sample text sample text
                            sample text sample text sample text sample text sample text sample text
                            sample text sample text sample text sample text sample text sample text
                            sample text sample text sample text sample text sample text sample text
                            sample text sample text sample text sample text sample text sample text
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer>
        {{> footer}}
    </footer>


    <script src="../bower_components/jquery/dist/jquery.min.js"></script>
    <script src="../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="../javascripts/main.js"></script>
    <script src="../javascripts/parallaxInicio.js"></script>
</body>
</html>
